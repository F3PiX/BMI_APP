<div>
  <% if user_measurements.any? %>
  <p class="text-center">Your history is </p>
  <table class="table table-striped table-bordered table-condensed">

        <thead>
        <tr>
          <th class="col-md-1 text-center">Weight</th>
          <th class="col-md-1 text-center">Date</th>
          <th class="col-md-1 text-center">BMI</th>
        </tr>
        </thead>
        <% user_measurements.descending.each do | m | %>
            <tr>
              <td><%= m.weight %> kg </td>
              <td><%= m.date.strftime("%d %b") %></td>
              <td><%= m.bmi_calc %></td>
        <% end %>
    <% end %>
  </table>
</div>